{
  "manifest_version": 3,
  "name": "ResumeAI",
  "version": "1.5",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
	"default_icon":{
	  "16": "images/icon16.png",
      "48": "images/icon48.png", 
      "128": "images/icon128.png"
	}
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["selection_window.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
